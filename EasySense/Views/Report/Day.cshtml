
@{
    ViewBag.Title = "日报";
}

<style>
    .table th, .table td {
        color: #333
    }

    .table td {
        border-bottom: 1px solid #ccc;
    }

    .table tbody tr:hover {
        background-color: #ddd;
    }
</style>

<div class="es-block-menu">
    <a href="/Report/Day/@ViewBag.ID" class="es-block-menu-active">日报</a>
    <a href="/Report/Week/@ViewBag.ID">周报</a>
    <a href="/Report/Month/@ViewBag.ID">月报</a>
    <a href="/Report/New/@ViewBag.ID">填写报告</a>
</div>
<div class="es-block">
    <p>
        年份：
        <select id="lstYears" class="select">
            @for (var i = 1970; i < DateTime.Now.Year;i++)
            {
                <option value="@i">@i</option>
            }
            <option value="@DateTime.Now.Year" selected>@DateTime.Now.Year</option>
        </select>
        月份：
        <select id="lstMonths" class="select">
            @for (var i = 1; i <= 12; i++)
            {
                <option value="@i" @(i == DateTime.Now.Month ? " selected" : "")>@i 月</option>
            }
        </select>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>星期</th>
                <th>日期</th>
                <th style="width:50%">内容</th>
                <th>记录时间</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody id="lstReports">
        </tbody>
    </table>
</div>

<script>

    function expendReports(id) {
        var div = $("#todo-part-" + id);
        if (div) {
            var hided = div.is(":hidden");
            if (!hided) {
                $("#todo-" + id).toggle();
                $("#todo-tr-" + id).toggle();
                $("#todo-part-" + id).hide();
            }
        }

        div = $("#question-part-" + id);
        if (div) {
            var hided = div.is(":hidden");
            if (!hided) {
                $("#question-" + id).toggle();
                $("#question-tr-" + id).toggle();
                $("#question-part-" + id).hide();
            }
        }

        div = $("#finished-part-" + id);
        if (div) {
            var hided = div.is(":hidden");
            if (!hided) {
                $("#finished-" + id).toggle();
                $("#finished-tr-" + id).toggle();
                $("#finished-part-" + id).hide();
            }
        }
    }

    function collapseReports(id) {
        var div = $("#todo-part-" + id);
        if (div) {
            var hided = div.is(":hidden");
            if (hided) {
                $("#todo-" + id).toggle();
                $("#todo-tr-" + id).toggle();
                $("#todo-part-" + id).show();
            }
        }

        div = $("#question-part-" + id);
        if (div) {
            var hided = div.is(":hidden");
            if (hided) {
                $("#question-" + id).toggle();
                $("#question-tr-" + id).toggle();
                $("#question-part-" + id).show();
            }
        }

        div = $("#finished-part-" + id);
        if (div) {
            var hided = div.is(":hidden");
            if (hided) {
                $("#finished-" + id).toggle();
                $("#finished-tr-" + id).toggle();
                $("#finished-part-" + id).show();
            }
        }
    }
    
    $(document).ready(function () {
        $("#txtDate").datetimepicker();

        function LoadReports() {
            ShowLoading();
            $("#lstReports").html('');
            var y = $("#lstYears").val();
            var m = $("#lstMonths").val();
            var count = DayCountOfMonth(y, m);
            $.getJSON("/Report/GetReports/@ViewBag.ID",
                {
                    Type: "Day",
                    year: y,
                    month: m
                }, function (data) {
                    var j = 0;
                    for (var i = 1; i <= count; i++) {
                        if (j >= data.length || i != data[j].Day) {
                            $("#lstReports").append("<tr><td>" + DayOfWeek(new Date(y, m, i)) + "</td><td>" + i + "</td><td></td><td></td><td></td><td></td></tr>");
                        }
                        else {
                            $("#lstReports").append("<tr><td>" + DayOfWeek(new Date(y, m, i)) + "</td><td>" + i + "</td><td><table border='0' style='width:100%'><tr><td width='100px;'><a href='javascript:;' style='color:red;' onclick='javascript:$(\"#todo-" + data[j].ID + "\").toggle(); $(\"#todo-tr-" + data[j].ID + "\").toggle(); showOrHide(\"todo-part-" + data[j].ID + "\");'>待办事项</a></td><td><div id=\"todo-part-" + data[j].ID + "\">" + data[j].TodoListPart + "</div></td></tr><tr id=\"todo-tr-" + data[j].ID + "\" class='es-report'><td colspan='2'><div id='todo-" + data[j].ID + "' class='es-report'>" + data[j].TodoList + "</div></td></tr><tr><td><a href='javascript:;' onclick='$(\"#question-" + data[j].ID + "\").toggle(); $(\"#question-tr-" + data[j].ID + "\").toggle(); showOrHide(\"question-part-" + data[j].ID + "\");'>遇到问题</a></td><td><div id=\"question-part-" + data[j].ID + "\">" + data[j].QuestionListPart + "</div></td></tr><tr id=\"question-tr-" + data[j].ID + "\" class='es-report'><td colspan='2'><div id='question-" + data[j].ID + "' class='es-report'>" + data[j].QuestionList + "</div></td></tr><tr><td><a href='javascript:;' onclick='javascript:$(\"#finished-" + data[j].ID + "\").toggle(); $(\"#finished-tr-" + data[j].ID + "\").toggle(); showOrHide(\"finished-part-" + data[j].ID + "\");'>已办事项</a></td><td><div id=\"finished-part-" + data[j].ID + "\">" + data[j].FinishedListPart + "</div></td></tr><tr id=\"finished-tr-" + data[j].ID + "\" class='es-report'><td colspan='2'><div id='finished-" + data[j].ID + "' class='es-report'>" + data[j].FinishedList + "</div></td></tr></table></td><td>" + data[j].Time + "</td><td><a href='javascript:;' onclick='expendReports(\"" + data[j].ID + "\");'>展开</a>&nbsp;&nbsp;<a href='javascript:;' onclick='collapseReports(\"" + data[j].ID + "\");'>收起</a>&nbsp;&nbsp;<a href='/Report/Edit/" + data[j].ID + "'>编辑</a></td></tr>");
                            j++;
                        }
                    }
                    HideLoading();
                });
        }
        LoadReports();
        $("#lstYears").change(function () {
            LoadReports();
        });
        $("#lstMonths").change(function () {
            LoadReports();
        });
    });
</script>